
@{
    ViewBag.Title = "Register";
}

@model miniForo.Models.dbDummyUser

<h2>Register</h2>

@using (Html.BeginForm("Users", "LogIn", FormMethod.Post))
{


<div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })

    @*[a-z 0-9-.]+@[a-z 0-9-.]+\.[a-z]{2,3}*@
   
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>

}
<div class="form-group">
    <label for="exampleInputEmail1">Repeat Email</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    
</div>

<div class="form-group">
    <label for="exampleInputEmail1">User tag</label>
    @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
    <small id="emailHelp" class="form-text text-muted">Please do not use any racial or offensive tag.</small>
</div>
<div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    @Html.TextBoxFor(m => m.password, new { @class = "form-control" })
</div>
<div class="form-group">
    <label for="exampleInputPassword1">Repeat Password</label>
  
</div>


<button type="submit" class="btn btn-primary">Submit</button>
</form>