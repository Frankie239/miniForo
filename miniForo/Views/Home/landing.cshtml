
    <style>

        .wrapper {
            display: grid;
            grid-template-columns:  10% 80% 10%;
            grid-template-rows: auto auto auto auto;
            gap:2%;
        }

        table {
            grid-column: 2/3;
            grid-row: 3/4;
        }

       
        #agregar {
        
            grid-column: 2/3;
            grid-row: 2;
            height: 69px;
            width: 162px;
    
        }
        h1{
            grid-column:2/3;
        }

    </style>
    <div class="wrapper">
        @{HttpCookie userCookie = Request.Cookies["UserCookie"];} 

        <h1>Welcome Back @userCookie.Value! </h1>
        <button onclick="location.href ='@(Url.Action("CreateEntry", "Home"))'" type="button" id="agregar" class="btn btn-primary btn-lg">Add Entry</button>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">UserTag</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>


                <tr onclick="location.href ='@(Url.Action("LoadEntry", "Home"))'">
                    <th scope="row">@ViewBag.title</th>
                    <td>@ViewBag.description</td>
                    <td>@ViewBag.userTag</td>
                    <td>19/6/2020-10:36 GTM-3</td> <!--Esto aca va a ser el User tag, pero no se puede poner arroba porque es razor-->
                </tr>



                <!--Stripped rows <3-->
                <tr>
                    <th scope="row">Amet</th>
                    <td>Amet consectetur adipisicing elit.</td>
                    <td>Nicolainas</td>
                    <td>19/6/2020-10:36 GTM-3</td>
                </tr>


            </tbody>

        </table>
        <!--Meter esto en una nueva vista, dedicada a esto y que sea la pagina por default cuando entras al foro-->
     


    </div>
